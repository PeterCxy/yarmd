{
  "name": "yarmd",
  "version": "1.0.2",
  "description": "Yet Another Recursive Multi-thread Downloader (A wrapper script around aria2, Nginx autoindex required)",
  "main": "lib/main.js",
  "bin": {
    "yarmd": "./bin/yarmd"
  },
  "scripts": {
    "build": "node_modules/.bin/babel src --out-dir lib",
    "start": "node_modules/.bin/babel src --out-dir lib && node ./lib/main.js",
    "prepublish": "node_modules/.bin/babel src --out-dir lib",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterCxy/yarmd.git"
  },
  "keywords": [
    "recursive",
    "downloader"
  ],
  "author": "PeterCxy",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/PeterCxy/yarmd/issues"
  },
  "homepage": "https://github.com/PeterCxy/yarmd#readme",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "jsdom": "^9.11.0",
    "optimist": "^0.6.1",
    "request": "^2.80.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0"
  }
}
